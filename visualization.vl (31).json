{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/Leenayesh/Leenayesh.github.io/main/Projectchart1extension3.csv",
    "format": {"property": "csv"}
  },
  "title": {
    "text": "Share of female employeers out of all women in employment",
    "subtitle": "Subsaharan Africa. Source:World Bank",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "width": 300,
  "height": 300,
  "mark": {"type": "line", "color": "darkblue", "strokeWidth": 3, "opacity": 2},
  "encoding": {"x": {"field": "date", "type": "temporal", "title": null}},
  "layer": [
    {
      "encoding": {
        "y": {"field": "value", "type": "quantitative", "title": null}
      },
      "layer": [
        {
          "mark": {
            "type": "line",
            "align": true,
            "interpolate": "step",
            "color": "darkblue"
          }
        },
        {
          "transform": [{"filter": {"selection": "hover"}}],
          "mark": {"type": "circle", "size": 100, "color": "darkblue"}
        }
      ]
    },
    {
      "mark": "rule",
      "encoding": {
        "opacity": {
          "condition": {"value": 0, "selection": "hover"},
          "value": 0
        },
        "tooltip": [
          {
            "field": "date",
            "type": "temporal",
            "format": "%Y",
            "title": "Year"
          },
          {
            "field": "value",
            "type": "quantitative",
            "format": ",.2f",
            "title": "Percentage"
          }
        ]
      },
      "selection": {
        "hover": {
          "type": "single",
          "fields": ["date"],
          "nearest": true,
          "on": "mouseover",
          "empty": "none",
          "clear": "mouseout"
        }
      }
    }
  ],
  "config": {}
}