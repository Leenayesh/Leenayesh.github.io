<script>
    // Set the charts that we want on the page as variables, linking them to JSON files:
    var covid1 = "charts/covid/chartC1.json";
    var covid2 = "charts/covid/chartC2.json";
    var covid3 = "charts/covid/chartCovidLiveVaccinationRateOldYoung.json";
    var covid4 = "charts/covid/chartD1.json";
    var covid5 = "charts/covid/chartH1.json";
    var covid6 = "charts/covid/chartC4.json";
    var covid7 = "charts/covid/chartCovidLiveUKCitiesLatestDataLight.json";
    var covid8 = "charts/covid/chartCovidLiveUKCitiesCasesLight.json";
    var covid9 = "charts/covid/chartR1.json";
    var covid10 = "charts/covid/chartD3.json";
    var covid11 = "charts/covid/chartCD1.json";
    var covid12 = "charts/covid/chartCD2.json";
    var covid13 = "charts/covid/chartCovidLocal1.json";
    var covid14 = "charts/covid/chartCovidLocal2.json";
    var covid15 = "charts/covid/chartCovidLocal3.json";
    var covid16 = "charts/covid/chartCovidLocal4.json";
  
  
 // Now embed the charts in the divs set above:
    vegaEmbed('#chart1', covid1, {"actions": false});   
    vegaEmbed('#chart2', covid2, {"actions": false});
    vegaEmbed('#chart3', covid3, {"actions": false});   
    vegaEmbed('#chart4', covid4, {"actions": false});
    vegaEmbed('#chart5', covid5, {"actions": false});   
    vegaEmbed('#chart6', covid6, {"actions": false});
    vegaEmbed('#chart7', covid7, {"actions": false});   
